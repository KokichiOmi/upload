<h1><%= @user.name %>のページ</h1>

<div>
<p>メールアドレス: <%= @user.email %></p>
<p>
  <strong>Image:</strong>
  <%= image_tag @user.image %>
</p>


<% @favorites_blogs = @user.favorite_blogs %>
  <div>
  <% @favorites_blogs.each do |favorites_blog| %>
    <div class="col-xs-12 col-md-6 blog-panel">
      <h2><%= favorites_blog.title%></h2>
      <p><%= favorites_blog.content%></p>
      <p><%= favorites_blog.created_at %></p>
      <div class="blog-links">
        <%= link_to '詳細', favorites_blog, class: 'btn btn-default' %>
      </div>
    </div>
  <% end %>
  </div>
</div>